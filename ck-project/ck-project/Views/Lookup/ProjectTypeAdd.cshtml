@model ck_project.project_type

@{
    ViewBag.Title = "Add Project Type";
    Html.Partial("_AdminMenu");
}

<h2>Add Project Type</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
